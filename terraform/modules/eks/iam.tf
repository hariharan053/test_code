resource "aws_iam_role_policy" "s3_policy" {
  name = "s3_policy_edge"
  role = aws_iam_role.node.id

  # Terraform's "jsonencode" function converts a
  # Terraform expression result to valid JSON syntax.
  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "s3:GetBucket*",
          "s3:List*",
          "s3:PutObject*",
          "s3:PutBucket*",
          "s3:Create*"
        ]
        Effect   = "Allow"
        Resource = [
          "arn:aws:s3:::${var.s3_bucket}/*",
          "arn:aws:s3:::${var.s3_bucket}"
          ]
      },
    ]
  })
}
